<!DOCTYPE html>
<html>
    <head>
        <title>CrawlerRails</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_pack_tag 'application' %>
    </head>

    <body>
        <%= render 'components/navbar' %>
        <% flash.each do |name, msg| %>
               <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
        <% end %>
        <div class="container">
            <%= yield %>
        </div>
        <%= javascript_pack_tag 'application' %>
    </body>
</html>
